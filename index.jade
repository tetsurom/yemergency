doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Yokosuka Emergency Map
    link(rel="stylesheet", href="css/bootstrap.min.css")
  body(style="margin-top: 50px;")
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Yokosuka Emergency Map
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle="dropdown")
                |レイヤー
                b.caret
              ul.dropdown-menu.layer-list
            li
              a.menu-about(href='#') このサイトについて
    div(style="width: 100%; height: 100%; position: fixed;")
      #map_canvas(style="width: 100%; height: 100%;")
    #about-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='about-modal-label', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
            h4#about-modal-label.modal-title About
          .modal-body(style='text-align: center;')
            h3 Yokosuka Emergency Map
            p Version 0.1
            h3 Credit
            ul.list-inline
              li
                a(href='https://github.com/nikuuchi', target='blank') Atsushi Uchida
              li
                a(href='https://github.com/Kouhei-Moriya', target='blank') Kouhei Moriya
              li
                a(href='https://github.com/sekiguchi-nagisa', target='blank') Nagisa Sekiguchi
              li
                a(href='https://github.com/tetsurom', target='blank') Tetsuro Matsumura
            h3 Special Thanks
            ul.list-inline
              li
                a(href="http://www.ubin.jp/yokosuka-opendata/", target='blank') 横須賀市防災情報オープンデータ
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
    script(type="text/javascript", src="js/jquery-1.11.0.min.js")
    script(type="text/javascript", src="js/bootstrap.min.js")
    script(type="text/javascript", src="index.js")
    script(type="text/javascript", src="http://maps.googleapis.com/maps/api/js?key=AIzaSyCYKBJNDGQr1ooy9wxoOH6QO2jnO4DUvN4&sensor=true")